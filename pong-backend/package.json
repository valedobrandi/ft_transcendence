{
    "name": "pong-backend",
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "build": "tsc",
        "prestart": "npm run build",
        "start": "node --trace-uncaught --trace-warnings dist/start.js",
        "test": "npx vitest --run --reporter verbose",
        "database": "node ./app/database/init.js",
        "print": "node ./app/database/table_print.js",
        "dev": "nodemon",
        "backend": "docker exec -it pong-backend"
    },
    "dependencies": {
        "@fastify/cookie": "^11.0.2",
        "@fastify/cors": "^11.1.0",
        "@fastify/jwt": "^10.0.0",
        "@fastify/websocket": "^11.2.0",
        "bcrypt": "^6.0.0",
        "better-sqlite3": "^12.4.1",
        "fastify": "^5.6.1",
        "jsonwebtoken": "^9.0.2",
        "node-fetch": "^3.3.2",
        "pino-pretty": "^13.1.2",
        "resend": "^6.3.0",
		"ts-node": "^10.9.2"
    },
    "devDependencies": {
        "@types/bcrypt": "^6.0.0",
        "@types/better-sqlite3": "^7.6.13",
        "@types/node": "^22.18.11",
        "@types/ws": "^8.18.1",
        "ethers": "^6.15.0",
        "nodemon": "^3.1.10",
        "ts-node": "^10.9.2",
        "tsx": "^4.20.6",
        "typescript": "~5.8.0",
        "vitest": "^4.0.4",
        "ws": "^8.13.0"
    },
    "vitest": {
        "test": {
            "globals": true,
            "environment": "node",
            "testTimeout": 10000
        }
    }
}

    "devDependencies": {
        "@types/bcrypt": "^6.0.0",
        "@types/better-sqlite3": "^7.6.13",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^22.18.11",
        "@types/ws": "^8.18.1",
        "ethers": "^6.15.0",
        "nodemon": "^3.1.10",
        "ts-node": "^10.9.2",
        "typescript": "~5.8.0",
